<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#post-opinion-modal">
    Post an opinion!
</button>

<!-- Modal -->
<div class="modal fade" id="post-opinion-modal" tabindex="-1" role="dialog" aria-labelledby="post-opinion-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="post-opinion-label">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="prompt">Prompt</label>
                        <input class="form-control" type="text" placeholder="Enter your prompt here">
                    </div>
                    <div class="form-group">
                        <label for="opinion-answer-select">How many answers would you like?</label>
                        <select class="form-control" id="opinion-answer-select">
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
