<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#post-opinion-modal">
    Post an opinion!
</button>

<!-- Modal -->
<div class="modal fade" id="post-opinion-modal" tabindex="-1" role="dialog" aria-labelledby="post-opinion-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="post-opinion-label">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="add-card-form">
                    <div class="form-group">
                        <label for="prompt">Prompt</label>
                        <input id="post-prompt-input" class="form-control" type="text" placeholder="Enter your prompt here">
                    </div>
                    <div class="form-group">
                        <label for="opinion-answer-select">Answers</label>
                        <div class="input-group mb-3">
                            <input type="text" id="post-answer-input" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-success" type="button">
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="modal_accept_btn" type="button" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
