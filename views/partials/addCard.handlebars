<!-- Modal -->
<div class="modal fade" id="post-opinion-modal" tabindex="-1" role="dialog" aria-labelledby="post-opinion-modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="post-opinion-label">Add a new opinion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="add-card-form">
                    <div class="form-group">
                        <label for="prompt">Prompt</label>
                        <input id="post-prompt-input" class="form-control" type="text" placeholder="Enter your question here">
                    </div>
                    <div class="form-group">
                        <label for="opinion-answer-select">Options</label>
                        <div id="opinion-input-fields" class="input-group mb-3">
                            <input type="text" id="post-answer-input-1" class="form-control" placeholder="Option 1" aria-label="Answer 1" aria-describedby="basic-addon2">
                            <input type="text" id="post-answer-input-2" class="form-control" placeholder="Option 2" aria-label="Answer 2" aria-describedby="basic-addon2">
                            <div id="add-option-btn-container" class="input-group-append">
                                <button id="add-option-btn" class="btn btn-success" type="button">+</button>
                            </div>
                            <div id="remove-option-btn-container" class="input-group-append">
                                <button id="remove-option-btn" class="btn btn-danger" type="button">-</button>
                            </div>
                        </div>
                    </div>
                    <div id="post-error-text" class="form-group has-danger" style="visibility: hidden;">
                        <div class="col-sm-10">
                            <div class="form-control-feedback">You have entered an invalid number of answers.</div>
                            <small class="form-text text-muted">You may only have 2-4 opinions per post.</small>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="modal_accept_btn" type="button" class="btn btn-primary">Submit</button>

                </form>
            </div>
        </div>
    </div>
</div>
